<resources>
    <!-- Base application theme (Material Components M2, DayNight) -->
    <style name="Theme.NotaMu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- System bars -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <!-- Default TextInputLayout mode = outlined (opsional, supaya tak perlu set di tiap layout) -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>
</resources>
